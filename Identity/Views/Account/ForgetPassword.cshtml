@using Identity.ViewModels.Account
@model AccountForgotPasswordVM
@{
	Layout = "_Layout";
}
<section class="ftco-section">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">

					<div asp-validation-summary="All"> </div>

					<form method="post" asp-controller="Account" asp-action="ForgetPassword" class="signin-form">
						<div class="form-group">
							<input asp-for="Email" class="form-control" placeholder="Email">
							<span class="text-danger" asp-validation-for="Email"> </span>
						</div>


						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">Send</button>
						</div>
					</form>
					<h3 class="mb-4 text-center">Create an account?</h3>
					<p class="w-100 text-center">&mdash; <a asp-controller="Account" asp-action="Register">Register</a> &mdash;</p>

				</div>
			</div>
		</div>
	</div>
</section>